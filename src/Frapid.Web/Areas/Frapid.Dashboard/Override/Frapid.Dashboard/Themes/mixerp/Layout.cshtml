@model dynamic
@using Frapid.ApplicationState.Cache
@using Frapid.i18n
@using Newtonsoft.Json

<!DOCTYPE html>
<html data-ng-app="FrapidApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="Frapid Framework" />
    <title data-ng-bind="$root.title">@ViewBag.Title</title>
    <link href="/scripts/semantic-ui/semantic.min.css" rel="stylesheet" />
    <link href="~/dashboard/my/template/Contents/mixerp.css" rel="stylesheet" />
    <script src="/i18n/resources.js?cultureCode=@CultureManager.GetCurrentUiCulture().Name"></script>
    <script src="~/assets/js/backend.js"></script>
    <script src="/scripts/angular-route.min.js"></script>
    <script src="~/dashboard/my/template/Scripts/vakata-jstree/jstree.min.js"></script>
    <script src="~/dashboard/my/template/Contents/dashboard.js"></script>
    <script src="~/dashboard/my/template/Contents/theme-selector.js"></script>
@if (CultureManager.IsRtl())
{
    <link rel="Stylesheet" href="@Href("~/assets/css/master-page-rtl.css")" />
}
else
{
    <link rel="Stylesheet" href="@Href("~/assets/css/master-page.css")" />
}
</head>
<body>
    <div class="ui stackable grid">
        <div class="four wide column">
            <a href="/dashboard" id="logo">
                <img class="ui small image" src="/dashboard/my/template/images/logo-sm.png" />
            </a>
        </div>
        <div class="twelve wide right aligned column">
            @{
                string themeSelector = ViewBag.LayoutPath + "ThemeSelector.cshtml";
            }
            @Html.Partial(themeSelector)
        </div>
    </div>
    <div class="vpad8"></div>

    <div id="main-menu" class="ui attached stackable menu">
    </div>
    <div id="dashboard-container" class="ui basic attached segment">
        <div data-ng-view>
            @RenderBody()
        </div>
    </div>
    <footer class="ui attached inverted teal borderless segment">
        <div class="ui container">
            <div class="ui stackable grid">
                <div class="two wide column">
                    <div class="vpad16">
                        <a href="http://mixerp.org" target="_blank">
                            <img class="ui small image" src="/dashboard/my/template/images/logo-inverted-sm.png" />
                        </a>
                    </div>
                </div>
                <div class="fourteen wide column">
                    <div class="footer-text">
                        Copyright &copy; 2013-2015. Frapid is free software published under MIT License.
                        <div class="ui divider"></div>
                        <p class="footer-links">
                            <a href="http://mixerp.org/forum/" target="_blank">Support</a><a href="http://mixerp.org/contact-us/" target="_blank">Contact Us</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </footer>
    @Html.AntiForgeryToken()
    <script src="~/dashboard/my/template/Contents/menu.js"></script>
    <script src="/scripts/underscore/underscore-min.js"></script>
	<script src="/scripts/inflection-js/inflection.js"></script>
</body>
</html>