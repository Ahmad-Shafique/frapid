@using Frapid.i18n

@{
    ViewBag.Title = I18N.PleaseConfirmYourRegistration;
    Layout = ViewBag.LayoutPath + ViewBag.Layout;
}
@if (CultureManager.IsRtl())
{
    <link rel="Stylesheet" href="@Href("~/assets/css/master-page-rtl.css")" />
}
else
{
    <link rel="Stylesheet" href="@Href("~/assets/css/master-page.css")" />
}

<div class="ui attached padded signup left aligned segment">
    <div class="ui container">
        <div class="ui header">@I18N.PleaseConfirmYourRegistration</div>
        <div class="ui divider"></div>
        @I18N.PleaseConfirmYourRegistrationMessage

        <a href="/" class="ui small padded purple button">@I18N.ReturnHome</a>
    </div>
</div>
