@using Frapid.Areas
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewBag.Title-MixERP Free ERP Solution</title>
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if lte IE 7]>
        <script src="js/IE8.js" type="text/javascript"></script><![endif]-->
    <!--[if lt IE 7]>

        <link rel="stylesheet" type="text/css" media="all" href="css/ie6.css"/><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="@ViewBag.Description" />
    <link href="~/Scripts/semantic-ui/semantic.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/my/template/contents/stylesheets/mixerp.css"/>
    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
</head>
<body>
@{
    string sidebar = ViewBag.LayoutPath + "Sidebar.cshtml";
    string footer = ViewBag.LayoutPath + "Footer.cshtml";
    string cookieNotice = ViewBag.LayoutPath + "CookieNotice.cshtml";
}

@Html.Partial(sidebar)

<div class="pusher">
<nav class="ui attached inverted fading indigo borderless segment">
    <div class="ui container">
        <div class="ui stackable fitted grid">
            <div class="twelve wide column">
                <a class="brand" href="/">
                    <img class="logo" src="/my/template/contents/images/logo-inverted.png"/>
                </a>
            </div>
            <div class="four wide right aligned column">
                <div class="trigger">
                    <a class="ui small inverted button" href="javascript:" onclick="$('.ui.sidebar').sidebar('toggle');">
                        <i class="sidebar icon"></i>Menu
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>

@RenderBody()
@Html.Partial(footer)
@Html.Partial(cookieNotice)
@Html.GetAntiForgeryToken()
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slider-pro/1.2.3/js/jquery.sliderPro.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/1.1.1/typed.min.js"></script>
<script src="~/Scripts/semantic-ui/semantic.min.js"></script>
<script src="/my/template/scripts/mixerp.js"></script>
</body>
</html>