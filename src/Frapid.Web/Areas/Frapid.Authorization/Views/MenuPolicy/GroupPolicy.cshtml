@model Frapid.Authorization.ViewModels.GroupMenuPolicy

@{
    ViewBag.Title = "Group Menu Policy";
    Layout = ViewBag.Layout;
}
<style>
    .selector.table tr {
        cursor: pointer;
    }
</style>
<div class="ui container">
    <div class="ui attached padded segment">
        <div class="ui huge header">Menu Access - Group Policy</div>
        <div class="ui divider"></div>
        <div class="ui vpad8 form">
            <div class="three fields">
                <div class="field">
                    <label>Select a Role</label>
                    <select id="RoleDropdown" class="ui search dropdown">
                        <option>Select</option>
                        @foreach (var item in Model.Roles)
                        {
                            <option value="@item.RoleId">@item.RoleName</option>
                        }
                    </select>
                </div>
                <div class="field">
                    <label>Select an Office</label>
                    <select id="OfficeDropdown" class="ui search dropdown">
                        <option>Select</option>
                        @foreach (var item in Model.Offices)
                        {
                            <option value="@item.OfficeId">@item.OfficeCode (@item.OfficeName)</option>
                        }
                    </select>
                </div>
                <div class="field">
                    <label>&nbsp;</label>
                    <button data-get-menu-policy-button class="ui positive button">Load</button>
                </div>
            </div>
        </div>

        <table class="ui attached selector table">
            <thead>
            <tr>
                <th>
                    <input type="checkbox" data-toggle-all/>
                </th>
                <th>
                    App
                </th>
                <th>
                    Menu Id
                </th>
                <th>
                    Menu Text
                </th>
                <th>
                    Url
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Menus)
            {
                <tr>
                    <td>
                        <input type="checkbox" data-menu-id="@item.MenuId"/>
                    </td>
                    <td>
                        @item.AppName
                    </td>
                    <td>
                        @item.MenuId
                    </td>
                    <td>
                        @item.MenuName
                    </td>
                    <td>
                        @item.Url
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="vpad8"></div>
        <button data-save-button class="ui positive button">Save</button>
    </div>
</div>
<script src="/Areas/Frapid.Authorization/Scripts/MenuPolicy/group-policy.js"></script>